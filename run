#!/bin/sh

cdir=$(pwd)
app=$(basename $cdir)

function build {
    # build the app for pypi
    source venv/bin/activate
    if linting && typing && tests; then
        echo "âš™ï¸ building $app..."
        python -m build
    else
        echo "âŒ build was unsuccessful"
    fi
}

function cleanup {
    # lint app using black and flake8
    echo "ğŸ§¾ linting $app..."
    source venv/bin/activate
    isort src tests
    black src tests
    flake8 src tests
    echo "ğŸ§¾ type checking $app..."
    mypy src tests
}

function tests {
    # test app using pytest
    echo "ğŸ§¾ testing $app..."
    source venv/bin/activate
    pytest -vv --cov-report term-missing
}

function upload {
    # upload to pypi
    source venv/bin/activate
    read -p 'â“ version? ' version
    echo "â¬†ï¸ uploading $app to pypi..."
    twine upload dist/*$version*
}

function help {
  printf "%s <task> [args]\n\nTasks:\n" "${0}"

  compgen -A function | grep -v "^_" | cat -n

  printf "\nExtended help:\n  Each task has comments for general usage\n"
}

TIMEFORMAT=$'\nTask completed in %3lR'
time "${@:-help}"
